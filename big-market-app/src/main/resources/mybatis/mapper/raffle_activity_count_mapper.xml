<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.c.infrastructure.dao.IRaffleActivityCountDao">

    <resultMap id="dataMap" type="com.c.infrastructure.po.RaffleActivityCount">
        <id column="id" property="id"/>
        <id column="activity_count_id" property="activityCountId"/>
        <id column="total_count" property="totalCount"/>
        <id column="day_count" property="dayCount"/>
        <id column="month_count" property="monthCount"/>
        <id column="create_time" property="createTime"/>
        <id column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryRaffleActivityCountByActivityCountId" resultMap="dataMap"
            parameterType="java.lang.Long">
        select id,
               activity_count_id,
               total_count,
               day_count,
               month_count,
               create_time,
               update_time
        from raffle_activity_count
        where activity_count_id = #{activityCountId}
    </select>

</mapper>